{
  "include": ["src/*.?js"],
  "exclude": ["src/*.test.?js"],
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true
  }
}
